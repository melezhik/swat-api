%= bootstrap 'all'
%== include 'app_header'
%== include 'pkg.search.form'


<div class="container">
    <% if ($count) { %>
    <% foreach my $p (@{$list}) { %>
    <strong><a href="/info/<%= $p->{name} %>"><%= $p->{dist}  %></a></strong><br>
    <i><%= $p->{info} %></i> <br>
    <%= $p->{release} %> - <%= $p->{date} %> - <a href="mailto:<%= join "", @{$p->{email}} %>"><%= $p->{author}  %></a>
    <hr>
    <% } %>
    <% } %>
</div>

